@model LoginModel 

<div class="bg-success text-center text-white p-2">
    <h4>Вхід у систему</h4>
</div>

<div class="m-1 text-danger" asp-validation-summary="All"></div>

<form method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <div class="form-group">
        <label>Логін</label>
        <input class="form-control" asp-for="@Model.UserName" />
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input asp-for="@Model.Password" type="password" class="form-control" />
    </div>
    <button class="btn btn-success mt-2" type="submit">Увійти</button>
</form>